{
  "installOptions": {
    "NODE_ENV": true
  },
  "scripts": {
    "mount:snowpacks": "mount app/javascript --to /snowpacks"
  },
  "devOptions": {
    "port": 4035,
    "open": "none",
    "out": "public"
  },
  "proxy": {
    "/*": "http://localhost:3000/*"
  },
  "buildOptions": {
    "clean": true,
    "baseUrl": "/"
  },
  "plugins": [
    "@snowpack/plugin-babel"
  ]
}
