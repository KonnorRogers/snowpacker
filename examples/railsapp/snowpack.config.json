{
  "installOptions": {
    "NODE_ENV": true
  },
  "scripts": {
    "mount:javascript": "mount /app/javascript/snowpacks --to /public/snowpacks",
    "mount:stylesheets": "mount /app/javascript/stylesheets --to /public/stylesheets",
    "mount:public": "mount public --to /",
    "build:css": "postcss"
  },
  "devOptions": {
    "port": 4000,
    "open": "none",
    "out": "public/snowpacks"
  },
  "proxy": {
    "0.0.0.0:3035": "0.0.0.0:3035"
  },
  "buildOptions": {
    "clean": true,
    "baseUrl": "/"
  },
  "plugins": [
    "@snowpack/plugin-babel",
    "@snowpack/plugin-parcel"
  ]
}
