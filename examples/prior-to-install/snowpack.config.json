{
  "installOptions": {
    "NODE_ENV": true
  },
  "scripts": {
    "mount:app/snowpacks": "mount app/javascript/snowpacks --to /snowpacks/javascript",
    "mount:stylesheets": "mount app/javascript/stylesheets --to /snowpacks/stylesheets",
    "mount:snowpacks": "mount snowpacks --to /"
  },
  "devOptions": {
    "port": 4000,
    "open": "none",
    "out": "snowpacks"
  },
  "proxy": {
    "0.0.0.0:4035": "0.0.0.0:4035"
  },
  "buildOptions": {
    "clean": false,
    "baseUrl": "/"
  },
  "plugins": [
    "@snowpack/plugin-babel",
    "@snowpack/plugin-parcel"
  ]
}
